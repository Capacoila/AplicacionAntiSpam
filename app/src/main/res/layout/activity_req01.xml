<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    tools:context=".Req01">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/blocklogo" />

    <TextView
        android:id="@+id/textViewMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Block - Security"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textbuscarnumeros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Busca numeros en todo el mundo"
        android:textAlignment="center"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/etSearch"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Buscar..."
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/barradebusqueda"
        android:drawableStart="@drawable/search"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp"

        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/style1"
            android:padding="16dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/blocklogosf"
                tools:layout_editor_absoluteX="119dp"
                tools:layout_editor_absoluteY="-13dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RadioGroup>


            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Llamadas"
                tools:layout_editor_absoluteX="114dp"
                tools:layout_editor_absoluteY="133dp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Mensajes"
                tools:layout_editor_absoluteX="114dp"
                tools:layout_editor_absoluteY="184dp" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="91dp"
                android:layout_height="40dp"
                android:checked="true"
                android:text="Block"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="226dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="293dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:onClick="onNoPermitirClick"
                    android:padding="16sp"
                    android:text="No Permitir"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onPermitirClick"
                    android:padding="12dp"
                    android:text="Permitir"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="49dp"
                android:layout_height="44dp"
                app:srcCompat="@drawable/ic_llamadas"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="137dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="49dp"
                android:layout_height="44dp"
                app:srcCompat="@drawable/ic_mensajes"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="182dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="49dp"
                android:layout_height="44dp"
                app:srcCompat="@drawable/blocklogosf"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="225dp" />

            <TextView
                android:id="@+id/textViewMensaje2"
                android:layout_width="314dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="Â¿Quieres establecer Block como tu identificador de llamadas y mensajes de spam predeterminada?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="58dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>